<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/jobDetailFragment"
        android:name="com.hilton.jobsearch.ui.detail.JobDetailFragment"
        android:label="fragment_job_detail"
        tools:layout="@layout/fragment_job_detail" >
        <argument
            android:name="job"
            app:argType="com.hilton.jobsearch.data.Job"/>
    </fragment>

    <fragment
        android:id="@+id/jobListFragment"
        android:name="com.hilton.jobsearch.ui.list.JobListFragment"
        android:label="fragment_job_list"
        tools:layout="@layout/fragment_job_list" >
        <argument
            android:name="jobs"
            app:argType="com.hilton.jobsearch.data.Job[]" />
        <action
            android:id="@+id/action_jobListFragment_to_jobDetailFragment"
            app:destination="@id/jobDetailFragment" >
            <argument
                android:name="job"
                app:argType="com.hilton.jobsearch.data.Job"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hilton.jobsearch.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_jobListFragment"
            app:destination="@id/jobListFragment" >
            <argument
                android:name="jobs"
                app:argType="com.hilton.jobsearch.data.Job[]" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.hilton.jobsearch.ui.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>